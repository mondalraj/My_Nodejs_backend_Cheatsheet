<!DOCTYPE html>
<html lang="en">
  
  <%- include('./partials/head.ejs') %>

  <body>
    
    <!-- adding partial of nav bar i.e. a nav component. -->
    <%- include('./partials/nav.ejs') %> 

    <div class="blogs content">
      <h2>All Blogs</h2>

      <!-- Accessing an array of blogs in index.ejs from app.js '/' -->

      <% if(blogs.length > 0){ %>

      <% blogs.forEach((blog) => { %>

        <h3 class="title"><%= blog.title %></h3>
        <p class="snippet"><%= blog.snippet %></p>

        <% }); %>

      <% } else { %>
        <h4>No blogs found</h4>
        <% } %>
        
    </div>

    <%- include('./partials/footer.ejs') %> 

  </body>
</html>